<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="phase3.cscb07.salesapplication.AccountView"
    tools:showIn="@layout/activity_account_view">

    <Button
        android:id="@+id/edit_my_account_button"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginEnd="130dp"
        android:layout_marginStart="131dp"
        android:layout_marginTop="103dp"
        android:text="Edit Account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/my_orders_button"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginEnd="142dp"
        android:layout_marginStart="142dp"
        android:layout_marginTop="50dp"
        android:text="My orders"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_my_account_button" />

    <Button
        android:id="@+id/back_button"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginEnd="127dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="54dp"
        android:text="back to store"
        android:onClick="backToStore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_orders_button" />
</android.support.constraint.ConstraintLayout>
