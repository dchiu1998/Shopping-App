<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="phase3.cscb07.salesapplication.AdminView"
    tools:showIn="@layout/activity_admin_view"
    android:background="@color/silver">

    <Button
        android:id="@+id/hire_user_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/edit_my_account_button"
        android:layout_marginBottom="29dp"
        android:layout_marginTop="24dp"
        android:onClick="toHireUserView"
        android:text="@string/hire_user_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintVertical_bias="0.05" />

    <Button
        android:id="@+id/restock_inventory_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hire_user_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:onClick="toRestockInventoryView"
        android:text="@string/restock_inventory_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintVertical_bias="0.2"/>

    <Button
        android:id="@+id/create_customer_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/restock_inventory_button"
        android:layout_below="@+id/restock_inventory_button"
        android:layout_marginTop="12dp"
        android:onClick="toCreateCustomerView"
        android:text="@string/create_customer_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintVertical_bias="0.35"/>

    <Button
        android:id="@+id/purchase_for_customer_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_customer_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:onClick="toPurchaseForCustomerView"
        android:text="@string/purchase_for_customer_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintVertical_bias="0.50"/>

    <Button
        android:id="@+id/edit_my_account_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/restock_inventory_button"
        android:layout_below="@+id/purchase_for_customer_button"
        android:layout_marginTop="12dp"
        android:onClick="toEditAccountView"
        android:text="@string/edit_my_account_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintVertical_bias="0.65"/>

    <Button
        android:id="@+id/logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/hire_user_button"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="280dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/white"
        android:text="@string/logout_text"
        android:onClick="logout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/selection_prompt"
        android:layout_width="370dp"
        android:layout_height="26dp"
        android:layout_marginTop="16dp"
        android:text="@string/selection_prompt_text"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/purchase_for_customer_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:textSize="18sp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="toViewBooksView"
        android:text="view books"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintVertical_bias="0.8"/>

    <Button
        android:id="@+id/show_account_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show User Accounts"
        android:onClick="toDisplayAccountEnterIdView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.95"
        app:layout_constraintHorizontal_bias="0.05"/>

</android.support.constraint.ConstraintLayout>